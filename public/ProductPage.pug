doctype html
html
  head
    title Grand Topham Ranch

  body
    nav
      a(class='NavbarLink' href='/Home') Home
      a(class='NavbarLink' href='/About') About
      a(class='NavbarLink' href='/Location') Location
      a(class='NavbarLink Selected' href='/Products') Products
      a(class='NavbarLink' href='/Invoice') Invoice

    div(class="BackgroundImageContainer")
      img(class='BackgroundImage' src='./backgroundImage.png' alt='Grand Topham Ranch')/

    div(class='BodyTitle') Products Page

    div(class='ProductsList')
      ul(class='ProductCategory') Products
      each item, itemName in local
        li(class='ProductItemLink')
          a(class='ItemLink' href=url)= itemName




  link(rel='stylesheet' type='text/css' href='./Home.css')/

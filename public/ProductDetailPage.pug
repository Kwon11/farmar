doctype html
html
  head
    title Grand Topham Ranch
    meta(name="viewport" content="width=device-width, height=device-height, initial-scale=0.41, maximum-scale=1")
    link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.6/css/bootstrap.min.css" integrity="sha384-rwoIResjU2yc3z8GV/NPeZWAv56rSmLldC3R/AZzGRnGxQQKnKkoFVhFQhNUwEyJ" crossorigin="anonymous")
  body
    nav
      div(class="NavbarLinkContainer")
        a(class='NavbarLink' href='/Home') Home
      div(class="NavbarLinkContainer")
        a(class='NavbarLink' href='/Location') Location
      div(class="NavbarLinkContainer")
        a(class='NavbarLink Selected' href='/Products') Products
      div(class="NavbarLinkContainer")
        a(class='NavbarLink' href='/Services') Services
      div(class="NavbarLinkContainer")
        a(class='NavbarLink' href='/Invoice') Invoice

    div(class="BackgroundImageContainer")
      img(class='BackgroundImage' src='https://dl.dropboxusercontent.com/s/z89ru42kzouakmz/BackgroundImage.png' alt='Grand Topham Ranch')/

    div(class='ProductDetailHeading')
      a(href='/Products')
        img(class="BackButtonIcon" src="https://dl.dropboxusercontent.com/s/a1wkkhhb9dhdjer/icons8-Back%20Arrow-18.png" alt="Back to Products")
        button(class='BackButton HomeLink') Back to Products List

    div(class='BodyTitle')= local.name
    div(class='CarouselContainer')
      div(class='carousel slide' data-ride='carousel')
        div(class='carousel-inner' role='listbox')

          each url in local.item.images
              div(class='carousel-item')
                img(class='d-block img-fluid' src=url alt=local.name name=local.name)/
        div(class='carousel-control-prev' role="button" data-slide="prev")
          span(span class="carousel-control-prev-icon" aria-hidden="true")
          span(class="sr-only") Previous
        div(class="carousel-control-next" role="button" data-slide="next")
          span(class="carousel-control-next-icon" aria-hidden="true")
            span(class="sr-only") Next
        ul(class='ThumbnailContainer')
          each url in local.item.images
            li(class='Thumbnails')
              img(class='ThumbnailImages' src=url alt=local.name )



  link(rel='stylesheet' type='text/css' href='./Home.css')/
  link(rel='stylesheet' href='https://fonts.googleapis.com/css?family=Open+Sans')/

  script(src="https://code.jquery.com/jquery-3.1.1.slim.min.js" integrity="sha384-A7FZj7v+d/sdmMqp/nOQwliLvUsJfDHW+k9Omg/a/EheAdgtzNs3hpfag6Ed950n" crossorigin="anonymous")
  script(src="https://cdnjs.cloudflare.com/ajax/libs/tether/1.4.0/js/tether.min.js" integrity="sha384-DztdAPBWPRXSA/3eYEEUWrWCy7G5KFbe8fFjk5JAIxUYHKkDx6Qin1DkWx51bBrb" crossorigin="anonymous")
  script(src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.6/js/bootstrap.min.js" integrity="sha384-vBWWzlZJ8ea9aCX4pEW3rVHjgjt7zpkNpZk+02D9phzyeVkE+jo0ieGizqPLForn" crossorigin="anonymous")
  script
    include scripts.js
